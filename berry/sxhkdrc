#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty

# rofi scripts
super + x
	rofi -show drun

alt + Tab
	rofi -show windowcd

super + Tab
	rofi -show window

super + shift + e
    rofi -show p -modi p:'/home/skeuo/.local/bin/rofi-power-menu'

super + space
    rofi -show emoji

# important apps
super + z
	pcmanfm

super + a
	firefox

super + shift + s 
  flameshot gui

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# berry hotkeys
#

super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {1-9}
    berryc switch_workspace {0-9}

super + shift + {1-9}
    berryc send_to_workspace {0-9}

super + m
    berryc window_monocle

super + faustralium
    berryc fullscreen

super +  p
    berryc snap_right

super + o 
    berryc snap_left

super + n
    berryc toggle_decorations

super + shift + q
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus
    